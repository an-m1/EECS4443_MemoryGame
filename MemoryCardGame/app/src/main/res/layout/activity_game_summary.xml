<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorCard"
            android:padding="24dp"
            android:orientation="vertical"
            android:elevation="4dp"
            android:layout_marginBottom="24dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game Summary"
                android:textColor="?attr/colorTextPrimary"
                android:textSize="28sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Summary Details -->
        <TextView
            android:id="@+id/summaryTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time: "
            android:textSize="18sp"
            android:textColor="?attr/colorTextPrimary"
            android:padding="8dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/summaryMovesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moves: "
            android:textSize="18sp"
            android:textColor="?attr/colorTextPrimary"
            android:padding="8dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/summaryMismatchesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mismatches: "
            android:textSize="18sp"
            android:textColor="?attr/colorTextPrimary"
            android:padding="8dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/summaryThemeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Theme: "
            android:textSize="18sp"
            android:textColor="?attr/colorTextPrimary"
            android:padding="8dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/summaryEfficiencyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Efficiency: "
            android:textSize="18sp"
            android:textColor="?attr/colorTextPrimary"
            android:padding="8dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/summaryInitialBatteryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Initial Battery: "
            android:textSize="18sp"
            android:textColor="?attr/colorTextPrimary"
            android:padding="8dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/summaryFinalBatteryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Final Battery: "
            android:textSize="18sp"
            android:textColor="?attr/colorTextPrimary"
            android:padding="8dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/summaryBatteryDifferenceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Battery Difference: "
            android:textSize="18sp"
            android:textColor="?attr/colorTextPrimary"
            android:padding="8dp"
            android:layout_marginBottom="24dp"/>

        <!-- Button Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/summaryRestartButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Restart"
                android:background="?attr/colorButtonRestart"
                android:textColor="?attr/colorTextPrimary"
                android:layout_marginEnd="8dp"
                android:padding="12dp"/>

            <Button
                android:id="@+id/summaryHomeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Home"
                android:background="?attr/colorButtonMainMenu"
                android:textColor="?attr/colorTextPrimary"
                android:layout_marginStart="8dp"
                android:padding="12dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
