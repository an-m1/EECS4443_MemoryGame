<resources>
    <!-- Light/Default theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Background colors -->
        <item name="colorBackground">@color/light_background</item>
        <item name="colorHeader">@color/light_header</item>
        <item name="colorCard">@color/light_card</item>
        <item name="colorAccent">@color/light_accent</item>

        <!-- Text colors -->
        <item name="colorTextPrimary">@color/dark_text</item>
        <item name="colorTextSecondary">@color/medium_text</item>

        <!-- Button colors -->
        <item name="colorButtonPlay">@color/light_button_play</item>
        <item name="colorButtonSettings">@color/light_button_settings</item>

        <!-- Pause Menu button colors (light theme) -->
        <item name="colorButtonResume">#4CAF50</item>       <!-- Green -->
        <item name="colorButtonRestart">#FF5722</item>     <!-- Deep Orange -->
        <item name="colorButtonThemeToggle">#2196F3</item> <!-- Blue -->
        <item name="colorButtonMainMenu">#818689</item>    <!-- Gray -->
    </style>
</resources>